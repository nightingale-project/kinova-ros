<launch>

    <arg name="use_urdf" default="true"/>
    <arg name="kinova_robotType" default="j2s7s300" />
    <arg name="kinova_robotSerial" default="not_set" />
    <arg name="use_jaco_v1_fingers" default="false" />
    <arg name="feedback_publish_rate" default="0.1" />
    <arg name="robot_parameters" default="robot_parameters" />

  <node name="right_arm_driver" pkg="kinova_driver" type="kinova_arm_driver" output="screen" cwd="node" args="$(arg kinova_robotType)" launch-prefix="">
    <rosparam file="$(find kinova_bringup)/launch/config/robot_parameters_right.yaml" command="load" />
    <param name="serial_number" value="$(arg kinova_robotSerial)" />   
    <param name="robot_name" value="right_arm" />   
    <param name="robot_type" value="$(arg kinova_robotType)" />   
    <param name="use_jaco_v1_fingers" value="$(arg use_jaco_v1_fingers)" />   
    <param name="status_interval_seconds" value="$(arg feedback_publish_rate)" />
  </node>
  <node name="right_arm_jtas" 
  	pkg="kinova_driver" 
  	type="joint_trajectory_action_server" 
  	output="screen" 
  	respawn="false" 
  	args="right_arm"/>
  	
  <node name="right_arm_gcas" 
  	pkg="kinova_driver" 
  	type="gripper_command_action_server" 
  	output="screen" 
  	respawn="false" 
  	args="right_arm"/>
  
  <node name="left_arm_driver" pkg="kinova_driver" type="kinova_arm_driver" output="screen" cwd="node" args="$(arg kinova_robotType)" launch-prefix="">
    <rosparam file="$(find kinova_bringup)/launch/config/robot_parameters_left.yaml" command="load" />
    <param name="serial_number" value="$(arg kinova_robotSerial)" />   
    <param name="robot_name" value="left_arm" />   
    <param name="robot_type" value="$(arg kinova_robotType)" />   
    <param name="use_jaco_v1_fingers" value="$(arg use_jaco_v1_fingers)" />   
    <param name="status_interval_seconds" value="$(arg feedback_publish_rate)" />
  </node>
  
  <node name="left_arm_jtas" 
  	pkg="kinova_driver" 
  	type="joint_trajectory_action_server" 
  	output="screen" 
  	respawn="false" 
  	args="left_arm"/>
  	
  <node name="left_arm_gcas" 
  	pkg="kinova_driver" 
  	type="gripper_command_action_server" 
  	output="screen" 
  	respawn="false" 
  	args="left_arm"/>

  <group if="$(arg use_urdf)">
    <node name="joint_states_relay_right" pkg="topic_tools" type="relay" args="/right_arm_driver/out/joint_state /joint_states" />
    <node name="joint_states_relay_left" pkg="topic_tools" type="relay" args="/left_arm_driver/out/joint_state /joint_states" />

    <param name="robot_description" command="$(find xacro)/xacro '$(find kinova_description)/urdf/movo_arms.xacro'" />
    <node name="robot_state_publisher"
           pkg="robot_state_publisher"
          type="robot_state_publisher">
    </node>
  </group>

</launch>
